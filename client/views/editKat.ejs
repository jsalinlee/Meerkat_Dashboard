<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Edit Meerkat</title>
    </head>
    <body>
        <form action="/meerkats/<%= meerkat.id %>" method="post">
            <label>Name: </label><input type="text" name="name" value="<%= meerkat.name %>">
            <label>Rank: </label><input type="text" name="rank" value="<%= meerkat.rank %>">
            <input type="submit" value="Edit">
        </form>
        <form action="/meerkats/destroy/<%= meerkat.id %>" method="post">
            <input type="submit" value="Delete">
        </form>
    </body>
</html>
